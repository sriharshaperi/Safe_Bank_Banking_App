<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ResetPasswordAnchorPaneController">
   <children>
      <AnchorPane fx:id="anchorPaneResetPassword" prefHeight="250.0" prefWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="lblResetPassword" layoutX="161.0" layoutY="21.0" text="Reset Your Password">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Button fx:id="btnChangePassword" layoutX="131.0" layoutY="195.0" mnemonicParsing="false" onAction="#handleChangeNewPasswordAction" text="Change Password">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Label fx:id="lblResetPasswordEmail" layoutX="390.0" layoutY="26.0" />
            <Button fx:id="btnCancel" layoutX="296.0" layoutY="195.0" mnemonicParsing="false" onAction="#handleCancelAction" text="Cancel">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <PasswordField fx:id="txtConfirmNewPassword" layoutX="95.0" layoutY="135.0" prefHeight="43.0" prefWidth="310.0" promptText="Confirm New Password">
               <font>
                  <Font size="20.0" />
               </font>
            </PasswordField>
            <PasswordField fx:id="txtNewPassword" layoutX="95.0" layoutY="68.0" prefHeight="43.0" prefWidth="310.0" promptText="New Password">
               <font>
                  <Font size="20.0" />
               </font>
            </PasswordField>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
