<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="800.0" minWidth="1500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.RegisterSceneController">
   <children>
      <AnchorPane layoutX="1.0" minHeight="600.0" minWidth="1000.0" prefHeight="803.0" prefWidth="1500.0">
         <children>
            <Label fx:id="lblBankName" alignment="CENTER" contentDisplay="CENTER" layoutX="669.0" layoutY="88.0" prefHeight="59.0" prefWidth="204.0" text="Safe Bank">
               <font>
                  <Font name="System Bold" size="34.0" />
               </font>
            </Label>
            <TextField fx:id="txtEmail" layoutX="602.0" layoutY="314.0" prefHeight="43.0" prefWidth="310.0" promptText="Email">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <PasswordField fx:id="txtPassword" layoutX="602.0" layoutY="388.0" prefHeight="43.0" prefWidth="310.0" promptText="Password">
               <font>
                  <Font size="20.0" />
               </font>
            </PasswordField>
            <Button fx:id="btnRegister" layoutX="770.0" layoutY="474.0" mnemonicParsing="false" onAction="#handleRegisterAction" prefHeight="37.0" prefWidth="111.0" text="Register">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Hyperlink fx:id="hyperlinkToLogin" layoutX="822.0" layoutY="538.0" onAction="#handleSwitchToLoginScene" prefHeight="23.0" prefWidth="67.0" text="Click Here" />
            <Label fx:id="lblSwitchToLogin" layoutX="627.0" layoutY="541.0" text="Already have an account ? To Login, " />
            <TextField fx:id="txtName" layoutX="602.0" layoutY="176.0" prefHeight="43.0" prefWidth="310.0" promptText="Name">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <TextField fx:id="txtPhone" layoutX="602.0" layoutY="245.0" prefHeight="43.0" prefWidth="310.0" promptText="Phone">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <Button fx:id="btnVerifyEmail" layoutX="650.0" layoutY="474.0" mnemonicParsing="false" onAction="#handleVerifyEmailAction" prefHeight="37.0" prefWidth="111.0" text="Verify Email">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="btnChangeEmail" layoutX="933.0" layoutY="318.0" mnemonicParsing="false" onAction="#handleChangeEmailAction" prefHeight="35.0" text="Change Email" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
